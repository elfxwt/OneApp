<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_tv_share_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/timeline_icon_retweet"
            android:text="转发"
            android:drawablePadding="8dp"
            android:paddingLeft="24dp"
            style="@style/TextViewBody"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@drawable/bg_tran2gray_sel"/>


        <TextView
            android:id="@+id/id_tv_comment_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:drawableLeft="@drawable/timeline_icon_comment"
            android:drawablePadding="8dp"
            android:paddingLeft="24dp"
            android:layout_gravity="center_vertical"
            android:text="评论"
            style="@style/TextViewBody"
            android:gravity="center_vertical"
            android:background="@drawable/bg_tran2gray_sel"
          />

        <TextView
            android:id="@+id/id_tv_like_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/timeline_icon_unlike"
            android:paddingLeft="24dp"
            android:text="点赞"
            android:drawablePadding="8dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            style="@style/TextViewBody"
            android:background="@drawable/bg_tran2gray_sel"/>
        </LinearLayout>




</LinearLayout>